## 
ALTER TABLE CRAWL_RESULTS ADD COLUMN IN_LINKS_SIZE INT;
ALTER TABLE CRAWL_RESULTS ADD COLUMN IN_LINKS TEXT;

## DROPPING IN_LINKS
ALTER TABLE CRAWL_RESULTS DROP COLUMN IN_LINKS_SIZE INT;
ALTER TABLE CRAWL_RESULTS DROP COLUMN IN_LINKS TEXT;



## the new creation script to use
CREATE TABLE IF NOT EXISTS CRAWL_RESULTS (
    URL TEXT,
    WHOLE_TEXT TEXT,
    TITLE TEXT,
    LINKS_SIZE INT,
    LINKS TEXT,
    IN_LINKS_SIZE INT,
    IN_LINKS TEXT,
    H1 TEXT,
    FOOTER_EXTRACT TEXT,
    ZTD_EXTRACT TEXT,
    SHORT_DESCRIPTION TEXT,
    VENDOR TEXT,
    ATTRIBUTES TEXT,
    NB_ATTRIBUTES INT, 
    STATUS_CODE INT,
    HEADERS TEXT,
    DEPTH INT,
    PAGE_TYPE VARCHAR(50),
    MAGASIN VARCHAR(100),
    RAYON VARCHAR(100),
    PRODUIT VARCHAR(100),
    LAST_UPDATE DATE
) TABLESPACE mydbspace;